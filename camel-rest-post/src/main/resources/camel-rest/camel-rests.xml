<?xml version="1.0" encoding="UTF-8"?>
<rests xmlns="http://camel.apache.org/schema/spring">
  <!-- Define additional camel rest endpoints 
       classpath:camel-rest/*.xml is automatically scanned
  -->
  
   <rest path="/hello">
    <get uri="/world">
      <route>
      	<log message="Get /hello/world"/>
      	<setBody><constant>Hello World!</constant></setBody>
      </route>
    </get>
  </rest>

</rests>
